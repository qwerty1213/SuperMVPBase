<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical"
    android:layout_gravity="bottom"
    android:background="@color/transparent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_time_picker"
        style="@style/MatchWrap"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_time"
            style="@style/MatchWrap.Horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_006"
                style="@style/text_gray12_wrap"
                android:text="结束时间" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            style="@style/MatchWrap.Horizontal"
            android:layout_below="@+id/ll_time">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_right"
                style="@style/WrapWrap.Horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <com.contrarywind.view.WheelView
                    android:id="@+id/wl_end_year"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <com.contrarywind.view.WheelView
                    android:id="@+id/wl_end_month"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <com.contrarywind.view.WheelView
                    android:id="@+id/wl_end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_left"
                style="@style/WrapWrap.Horizontal"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <com.contrarywind.view.WheelView
                    android:id="@+id/wl_end_after"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/include_lines_c_f7" />

    <com.zhy.autolayout.AutoLinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="确定" />
    </com.zhy.autolayout.AutoLinearLayout>

    <!--背景bg_transparent 就是一张半透明的图片 -->
    <View
        android:id="@+id/view_transparent"
        style="@style/MatchMatch"
        android:background="@mipmap/pop_background"
        android:visibility="gone" />

</com.zhy.autolayout.AutoLinearLayout>