<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    style="@style/MatchWrap.Vertical"
    android:background="@drawable/alert_bg"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_title"
        style="@style/text_black18_mwrap"
        android:text="提示"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_msg"
        style="@style/text_black14_mm"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="sssssssssssssssss" />

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/btn_neg"
            style="@style/text_black14_wrap"
            android:layout_marginRight="10dp"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消" />

        <TextView
            android:id="@+id/btn_pos"
            style="@style/text_black14_wrap"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>