<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_load"
    style="@style/WrapWrap.Vertical"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_load"
        android:layout_width="@dimen/loading_status_width"
        android:layout_height="@dimen/loading_status_height"
        android:layout_gravity="center"
        android:src="@mipmap/default_loading_icon" />

    <TextView
        android:id="@+id/tv_load"
        style="@style/text_black12_wrap"
        android:layout_gravity="center_horizontal" />

</LinearLayout>