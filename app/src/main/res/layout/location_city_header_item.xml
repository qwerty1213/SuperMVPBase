<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical"
    android:background="@color/c_f5"
    android:layout_marginEnd="25dp">

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="您正在看：北京"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        style="@style/MatchWrap"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        android:paddingBottom="20dp"
        android:text="@string/location_recent_access"
        android:textColor="@color/c_8686"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_location_recent_acces"
        style="@style/RecyclerView_Style_Match_transparent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <TextView
        style="@style/MatchWrap"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="20dp"
        android:text="@string/hot_city"
        android:textColor="@color/c_8686"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hot_city"
        style="@style/RecyclerView_Style_Match_transparent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

</com.zhy.autolayout.AutoLinearLayout>