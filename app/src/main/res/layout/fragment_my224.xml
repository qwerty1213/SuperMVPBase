<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/white">

    <com.android.tool.widget.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/MatchMatch">

        <com.zhy.autolayout.AutoRelativeLayout
            style="@style/MatchMatch.Vertical"
            android:background="@color/white">

            <include layout="@layout/include_mine_top_layout" />

            <include layout="@layout/include_mine_menu_layout" />

            <View
                android:id="@+id/view_menu_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/ll_menu_layout"
                android:background="@color/c_f5" />

            <include layout="@layout/my_layout" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.android.tool.widget.MyScrollView>

    <com.android.tool.widget.ButtonView
        android:id="@+id/iv_consulting"
        android:layout_width="45dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:visibility="visible" />
</com.zhy.autolayout.AutoRelativeLayout>
